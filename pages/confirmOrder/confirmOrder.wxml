<!--pages/confirmOrder/confirmOrder.wxml-->
<view class="confirmOrder">
  <view class="confirmOrder-head" style="padding-top:{{statusBarHeight}}px;">
    <view class="confirmOrder-back" bindtap="handleToBack">
      <image src="../../images/icon_fanhui.png"></image>
    </view>
    <view class="confirmOrder-h1">确认订单</view>
  </view>

  <view class="confirmOrder-content" style="padding-top:{{statusBarHeight*2+90}}rpx">
    <view class="shop-name">
      <view>
        <image src="{{shopInfo.store_icon}}"></image>
      </view>
      <view>{{shopInfo.store_name}}</view>
    </view>
    <view class="shop-info">
      <view>
        <image src="{{shopInfo.head_img}}"></image>
      </view>
      <view>
       {{shopInfo.title}}
      </view>
    </view>
    <view class="buy-num">
      <view>购买数量</view>
      <view class="compute">
        <view class="compute-jian" bindtap="handleNumJian">
          <image src="../../images/jian.png"></image>
        </view>
        <view class="compute-num">{{num}}</view>
        <view class="compute-jia" bindtap="handleNumJia">
          <image src="../../images/jia.png"></image>
        </view>
      </view>
    </view>
    <view class="count">
      <view>小计</view>
      <view class="count-price">
        <view>￥</view>
        <view>{{shopPriceAll}}</view>
      </view>
    </view>
    <view class="active">
      <view>活动优惠价</view>
      <view class="active-price">
        <view>￥</view>
        <view>{{shopInfo.sellprice}}</view>
      </view>
    </view>
    <view class="vip">
      <view>会员折扣</view>
      <view class="vip-price">
        <!-- <view>-</view> -->
        <!-- <view>￥</view> -->
        <view>暂无</view>
      </view>
    </view>

    <view class="sort-count">
      <view>可用{{shopInfo.deduct}}积分抵￥{{shopInfo.deductPrice}}</view>
      <view bindtap="handleToImage">
        <image src="{{integrate?'../../images/kongzhi_kaiguan1.png':'../../images/kongzhi_kaiguan2.png'}}"></image>
      </view>
    </view>
    <view class="pay">
          <view>需付金额</view>
          <view class="pay-price">
              <view>￥</view>
              <view>{{count}}</view>
          </view>
    </view>

  </view>
   <view class="footer {{isFullSucreen?'footer-isFullSucreen':''}}">
            <view>合计:</view>
            <view>
                <view>￥</view>
                <view>{{count}}</view>
            </view>
            <view class="rightBuy" bindtap="handleRightBuy">立即购买</view>
  </view>

</view>