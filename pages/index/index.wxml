<!--index.wxml-->
    <view class="head {{headBorder?'head-border':''}}" style="padding-top:{{statusBarHeight}}px">
        <view wx:if="{{posH}}">
              <view class="h1">有折打</view>
              <view class="pos" bindtap="handleToPosition">
                    <view><image src="../../images/icon_dingwei.png"/></view>
                    <view>{{city}}</view>
                    <view><text>{{district}}</text><text>{{street_number}}</text></view>
                    
              </view>  
        </view>  
          <view wx:if="{{scrollH}}">
                  <view class="h2">有折打</view>
          </view>
     </view>
        <refresh-view id='refreshView' backgroundColor="#000" bind:onRefresh="onPullDownRefresh"/>
        <view class="wrap container" bindtouchstart='handletouchstart' bindtouchmove='handletouchmove' bindtouchend='handletouchend' bindtouchcancel='handletouchcancel'>
        <!-- 轮播图 -->
          <view class="banner">
              <swiper class="banner-img" indicator-dots="true" indicator-active-color="#fff" indicator-color="background:rgba(255,255,255,0.5)" autoplay="true">
                <block wx:for="{{bannerSwiper}}" wx:key="{{this}}">
                    <swiper-item  class="banner-swiper" id="{{item.id}}"><image src="{{item.img}}"></image></swiper-item>
                 </block>
              </swiper> 
          </view>

          <!-- 内容区域 -->
          <view class="content-list">
                <view  bindtap="handleToFoundGoodsFood">
                      <image src="../../images/shouye_haochide.png"></image>
                      <view>好吃的</view>
                </view>
                <view  bindtap="handleToFoundChangeBeatful">
                      <image src="../../images/shouye_bianmeide.png"></image>
                      <view>变美的</view>
                </view>
                <view  bindtap="handleToFoundGoToPaly">
                      <image src="../../images/shouye_chuqulang.png"></image>
                      <view>出去浪</view>
                </view>
                <view  bindtap="handleToFoundSonPlay">
                        <image src="../../images/shouye_baobeiwan.png"></image>
                        <view>宝贝玩</view>
                </view>

          </view>
          <!-- 消息宣传 -->
          <view class="message">
               <view><image src="../../images/icon_gonggao.png"></image></view>
               <view><text>海珠广场</text><text>东江店</text><text>48元抵100元代金券回家看看</text></view>
               <view><image src="../../images/icon_jinruhuang.png"></image></view>
          </view>

          <!-- 优惠精选 -->
          <view class="cheap-sel">
                <view class="cheap-sel-h2">优惠精选</view>
                    <view bindtap="handleToDetails" id="{{getForDiscount.id}}">
                            <view class="cheap-sel-bg"><image src="{{getForDiscount.head_img}}"></image></view>
                      <view class="cheap-sel-dec">{{getForDiscount.title}}</view>
                    <view class="cheap-sel-type">无需预约 马上使用</view>    
                    </view>
                    
               
          </view>

          <!-- 附近爆款 -->
          <view class="near-hot">
                <view class="near-hot-h">附近爆款优惠</view>
                <view class="near-lift">精选周边优质生活</view>
                <view class="near-hot-list" wx:for="{{nearbyExplosive}}" wx:key="this" id="{{item.id}}" bindtap="handleToDetails">
                      <view class="near-hot-img">
                            <image src="{{item.headpic}}"></image>
                      </view>
                      <view class="near-hot-dec">
                          <view class="near-hot-tit">{{item.title}}</view>
                          <view class="near-hot-pos">
                              <view class="near-hot-poslog">
                                    <image src="../../images/moni5.jpg"></image>
                              </view>
                              <view class="near-hot-add">{{item.storename}}</view>
                          </view> 
                          <view class="near-hot-price">
                              <view class="near-hot-prices">
                                   <view class="shop-price"><text>￥</text><text class="pricefont">{{item.sellprice}}</text></view>
                                <view class="shop-big-price"><text>￥</text><text class="pricefont">{{item.price}}</text><view class="fengexian"></view></view>
                              </view>
                               
                                <view class="shop-celled">已售{{item.sells}}</view>
                          </view>
                         
                      </view>
                </view>
                <view class="near-list-border"></view>
          </view>
          <!-- 你的朋友已经领取了这些 -->
          <view class="friend">
              <view class="friend-h">你的朋友已经领取了这些</view>
              <view class="near-hot-list" wx:for="{{getCouponFor2km}}" wx:key="this" id="{{item.id}}" bindtap="handleToDetails">
                      <view class="near-hot-img">
                            <image src="{{item.headpic}}"></image>
                      </view>
                      <view class="near-hot-dec">
                          <view class="near-hot-tit">{{item.title}}</view>
                          <view class="near-hot-pos">
                              <view class="near-hot-poslog">
                                    <image src="../../images/moni5.jpg"></image>
                              </view>
                              <view class="near-hot-add">{{item.storename}}</view>
                          </view> 
                          <view class="near-hot-price">
                              <view class="near-hot-prices">
                                   <view class="shop-price"><text>￥</text><text class="pricefont">{{item.sellprice}}</text></view>
                                <view class="shop-big-price"><text>￥</text><text class="pricefont">{{item.price}}</text><view class="fengexian"></view></view>
                              </view>
                               
                                <view class="shop-celled">已售{{item.sells}}</view>
                          </view>
                         
                      </view>
                  </view>
          </view>

          <!-- 下拉刷新 -->
          <view class="fresh" wx:if="{{false}}">上拉加载</view>

          <!-- <view class="footer {{isFullSucreen?'footer-isFullSucreen':''}}">
            <view>
                  <image src="{{home}}"></image>
                  <view class="active">有折打</view>
            </view> 
            <view bindtap="handleToFound">
                  <image src="{{found}}"></image>
                  <view>发现</view>
            </view>
            <view bindtap="handleToMy">
                  <image src="{{my}}"></image>
                  <view>我的</view>
            </view>
          </view> -->
</view>

