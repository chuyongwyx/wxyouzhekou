/* pages/order/order.wxss */
.order-head{
    position: fixed;
    top: 0;
    left: 0;
    display: flex;
    background: #fff;
    width: 100%;
    height:88rpx;
    z-index: 5;
    border-bottom:2rpx solid #D6D6D6;
}
.order-back{
    display: flex;
    margin-left: 40rpx;
    width: 30rpx;
    align-items: center;
}
.order-back>image{
    width:17rpx;
    height:31rpx;
}
.order-h1{
  height:88rpx;
  font-size:34rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
 align-items: center;
 line-height: 88rpx;
  margin-left: 218rpx;
}
/* 没有订单 */
.no-order{
   margin-top: 110rpx;
   width: 100%;
   text-align: center;
}
.no-order>view:nth-of-type(1){
  font-size:34rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height: 1;
}
.no-order>view:nth-of-type(2){
    line-height: 1;
    margin-top: 20rpx;
    font-size:30rpx;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:500;
    color:rgba(150,150,150,1);
}
/* 订单内容 */
.order-content{
  width:690rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx 4rpx 36rpx -2rpx rgba(0,0,0,0.15);
  border-radius:12rpx;
  margin:0 30rpx;
  margin-top: 30rpx;
}


.order-num{
  display: flex;
  justify-content: space-between;
  padding-top: 30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  line-height: 1;
}
.order-num>view:nth-of-type(1){
  display: flex;
  font-size:26rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(150,150,150,1);
}
.order-num>view:nth-of-type(2){
  display: flex;
  font-size:26rpx;
  font-family:PingFangSC-Medium,PingFang SC;  
  font-weight:500;
  color:rgba(51,51,51,1);
}
.order-img{
  display: flex;
  margin-left: 30rpx;
  margin-top: 20rpx;
}
.order-img>view:nth-of-type(1){
  width: 148rpx;
  height: 148rpx;
  margin-right: 30rpx;
}
.order-img>view:nth-of-type(1) image{
  width: 148rpx;
  height: 148rpx;
}
.order-img>view:nth-of-type(2){
  font-size:30rpx;
font-family:PingFangSC-Medium,PingFang SC;
font-weight:500;
color:rgba(51,51,51,1);
}
.order-count{
  display: flex;
  justify-content: space-between;
  margin:0 30rpx;
  padding-bottom: 30rpx;
  line-height: 1;
  margin-top: 20rpx;
}
.count-num{
  display: flex;
  font-size:26rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(150,150,150,1);
}
.count-pay{
  display: flex;
}
.count-pay>view:nth-of-type(1){
  font-size:26rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
}
.count-pay>view:nth-of-type(2){
  font-size:32rpx;
  font-family:'DIN Alternate';
  font-weight:bold;
  color:rgba(255,116,20,1);
}
.count-pay>view:nth-of-type(3){
  font-size:26rpx;
font-family:PingFangSC-Medium,PingFang SC;
font-weight:500;
color:rgba(51,51,51,1);
margin-left: 6rpx;
}