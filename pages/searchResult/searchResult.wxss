/* pages/searchResult/searchResult.wxss */
.found{

}
.search-head{
    position: fixed;
    top: 0;
    left: 0;
    background: #fff;
    width: 100%;
    z-index: 5;
    border-bottom:2rpx solid #D6D6D6;
}
.search-tit{
     display: flex;
     height:88rpx;
}
.search-back{
    display: flex;
    margin-left: 40rpx;
    width: 30rpx;
    align-items: center;
}
.search-back>image{
    width:17rpx;
    height:31rpx;
}
.search-h1{
  width:136rpx;
  height:88rpx;
  font-size:34rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
 align-items: center;
  margin-left: 224rpx;
  line-height: 88rpx;
}
.header{
  margin:0 30rpx;
  display: flex;
  padding-bottom:12rpx;
  line-height: 80rpx;
  justify-content: space-between;
}
.search{
  display: flex;
   width:600rpx;
    height:80rpx;
    background:rgba(242,242,242,1);
    border-radius:42rpx;
    align-items: center;
    font-size: 30rpx;
}
.search-ico{
    box-sizing: border-box;
   color: #A7A7A7;
   margin-left: 30rpx;
   padding-top:35rpx; 
   
}
.inputValue{
  color:#A7A7A7;
}
.search-r{
  font-size:30rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
}
/* 商品列表 */
.content-list{
  display: flex;
  flex-wrap: wrap;
  margin:0 17rpx;
  padding-bottom: 148rpx;
}
.shopList{
  margin:0 13rpx;
  margin-top: 32rpx;
  width: 332rpx;
}
.shopList-banner{
  width:332rpx;
  height:220rpx;
  border-radius: 12rpx;
}
.shopList-banner image{
  width:332rpx;
  height:220rpx;
  border-radius: 12rpx;
}
.shopList-desc{
  width:332rpx;
  max-height:88rpx;
  font-size:30rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:44rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal;
  margin-top: 18rpx;

}
.shopList-info{
   display: flex;
   justify-content: space-between;
   /* margin-top: 18rpx; */
}
.shopList-price{
  display: flex;
}
.shopList-cell-price{
  font-size:38rpx;
  font-family:'DIN Alternate';
  color:rgba(255,116,20,1);
  margin-right: 15rpx;
}
.shopList-cell-price>text:nth-of-type(2){
  font-weight:bold;
}
.shop-big-price{
  font-size:26rpx;
  line-height:30rpx;
  color:rgba(150,150,150,1);
  margin-top: 16rpx;
  position: relative;
}
.pricefont{
  margin-left: -5rpx;
  font-family:'DIN Alternate';
  font-weight:bold;
}
.fengexian{
  position: absolute;
  width: 100%;
  height: 2rpx;
  top: 15rpx;
  left:2rpx;
  background:rgba(151,151,151,1);
}
.shopList-cell{
  display: flex;
  font-size:26rpx;
  font-family:PingFangSC-Bold,PingFang SC;
  font-weight:bold;
  color:rgba(150,150,150,1);
  justify-content: center;
  align-items: center;
  
}