<!--pages/found/found.wxml-->
<view class="found"> 
  <view class="found-head" style="padding-top:{{statusBarHeight}}px" >
      <block wx:if="{{scrollBefore}}">
             <view class="found-h">发现</view>
          <view class="found-search">
                <view class="found-pos" bindtap="handleToPosition">
                      <view class="found-pos-img"> <image src="../../images/icon_dingwei.png"></image> </view>
                      <view>{{city}}</view>
                </view>
                <view class="search" bindtap="handleToSearch">
                      <view class="search-img"><image src="../../images/moni10.jpg"></image> </view>
                      <view>今天想去哪里吃喝玩乐</view>        
                </view> 
          </view>   
      </block>
      <block wx:if="{{scrollIng}}">
            <view class="found-search-scroll">
                <view class="found-pos">
                      <view class="found-pos-img"> <image src="../../images/icon_dingwei.png"></image> </view>
                      <view>{{city}}</view>
                </view>
                <view class="search-scroll" bindtap="handleToSearch">
                      <view class="search-img"><image src="../../images/moni10.jpg"></image> </view>
                      <view>今天想去哪里吃喝玩乐</view>        
                </view> 
          </view> 
      </block>
        
           <view class="screen" style="position:relative;">
                    <view>
                          <view class="allFoods {{allFood?'active':'deactive'}}" style="display:flex;" bindtap="handleToAllFoods">
                            <view>全部美食</view>
                            <view><image src="{{allFood?'../../images/xialahuang.png':'../../images/xiahui.png'}}"></image></view>
                          </view>
                    </view>
                      <view>
                             <view class=" nears {{near?'active':'deactive'}}"  style="display:flex;width:90rpx;" bindtap="handleToNears">
                              <view>附近</view>
                               <view><image src="{{near?'../../images/xialahuang.png':'../../images/xiahui.png'}}" style="width:20rpx;height:14rpx;"></image></view>
                              </view>
                      </view>
                     

                    <view >
                         <view class="minds {{mind?'active':'deactive'}}"  style="display:flex;" bindtap="handleToMinds">
                              <view>排序</view>
                               <view><image src="{{mind?'../../images/xialahuang.png':'../../images/xiahui.png'}}" style="width:20rpx;height:14rpx;"></image></view>
                          </view> 
                    </view>
                    
                     <view class="select-all-kind" style="position:absolute;top:60rpx;width:100%;background:#fff;">            

                        <!-- 全部美食系列            -->
                               <view class="foods-all" wx:if="{{allFood}}">
                                  <view wx:for="{{allfoodKinds}}" class="foods-all-kinds" style="{{index>6?'border-right:0;':''}}">
                                        <view class="foods-kinds-left">
                                              <!-- active[index]?'foods-kinds-active':'foods-kinds-deactive' -->
                                              <view  class="foods-kinds-active"></view>
                                              <view>全部美食</view>
                                        </view>
                                        <view class="foods-kinds-right">8765</view>
                                  </view>
                              </view>
                          <!-- 附近系列 -->
                                <view class="nearKinds" wx:if="{{near}}">
                                      <view class="nearKinds-left">
                                            <view>
                                                  <view class="foods-kinds-active"></view>
                                                  <view>附近</view>
                                            </view>
                                            <view>
                                                  <view class="foods-kinds-active"></view>
                                                  <view>热门商区</view>
                                            </view>
                                            <view>
                                                  <view class="foods-kinds-active"></view>
                                                  <view>热门商区2</view>
                                            </view>
                                      </view>
                                      <view class="nearKinds-right">
                                            
                                                  <view class="nearKinds-type">
                                                        <view>距离</view>
                                                        <view>
                                                            <view>附近</view>
                                                            <view>（智能范围）</view>
                                                        </view> 
                                                  </view>
                                                  <view>500米</view>
                                                  <view>1000米</view>
                                                  <view>1500米</view>
                                                  <view>3000米</view>
                                                  <view>5000米</view>
                                               
                                      </view>
                                </view>
                          <!-- 智能排序 -->
                                <view class="sortKindSelect" wx:if="{{mind}}">
                                      <view>智能排序</view>
                                      <view>距离优先</view>
                                      <view>人气优先</view>
                                      <view>好评优先</view>
                                      <view>价格最低</view>
                                      <view>价格最高</view>

                                </view>
                     </view>
                </view>
  </view>
   
   <view class="main" >
        <!-- banner图部分 -->
        <view class="banner" style="padding-top:{{bannerTop}}rpx">
            <view class="banner-h">转角有优惠</view> 
            <view class="banner-swiper">
                <swiper indicator-dots="true" indicator-active-color="#fff" indicator-color="background:rgba(255,255,255,0.5)" autoplay="true" class="banner-img">
                    <swiper-item wx:for="{{binnerSwiper}}" id="{{item.id}}" wx:key="{{this}}"><image src="{{item.img}}"></image> </swiper-item>   
                </swiper>
            </view>
        </view>
        <!-- 列表页 --> 
        <view class="content-list">
            <view class="shopList" wx:for="{{kindsData}}" wx:key="{{this}}" id="{{item.id}}" bindtap="handleToDetails">
                  <view class="shopList-banner"><image src="{{item.headpic}}"></image></view>
                  <view class="shopList-desc">{{item.title}}({{item.storename}})</view>
                  <view class="shopList-info">
                        <view class="shopList-price">
                            <view class="shopList-cell-price"> <text>￥</text><text>{{item.sellprice}}</text> </view>
                                <view class="shop-big-price"><text>￥</text><text class="pricefont">{{item.price}}</text><view class="fengexian"></view></view> 
                        </view>

                        <view class="shopList-cell">
                            <view>已售</view>
                            <view>{{item.sells}}</view>
                        </view>
                      
                  </view> 
            </view>
        
        </view>
        

    </view>
     <view class="" style="width:100%;height:100%;position:fixed;top:0;left:0;background:rgba(0,0,0,0.3)" wx:if="{{mark}}" bindtap="handleToMarkHide"></view>
